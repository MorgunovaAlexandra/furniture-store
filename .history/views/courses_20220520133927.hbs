<h1>курсы</h1>

{{#if courses.lenght}}
{{each courses}}
<div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <img src={{img}}>
          <span class="card-title">{{name}}</span>
        </div>
        <div class="card-content">
          <p>{{price}}</p>
        </div>
        <div class="card-action">
          <a href="/">This is a link</a>
        </div>
      </div>
    </div>
  </div>


{{else}}
<h1>Курсов нет </h1>
{{/if}}