

{{#if courses.length}}

<div class="row">
    {{#each courses}}
    
    <div class="col s3">
      <div class="card">
        <div class="card-image">
          <img src={{img}}>
          <span class="card-title">{{name}}</span>
        </div>
        <div class="card-content">
          <p>{{price}}</p>
          <span class="card-title">{{name}}</span>
        </div>
       
      </div>
    </div>
    
    {{/each}}
     <div class="card-action">
          <a href="/">добавить курсы</a>
        </div>
  </div>


{{else}}
<h1>Курсов нет </h1>
{{/if}}