            <th>{{}}</th>
            <td>{{count}}</td>
            <td><button class="js-remove" data-id="{{id}}">удалить</button></td>
               
          
        </tr>
    </tbody>
    
    {{/each}}
</table>
<p><h1> Сумма всего: {{price}}$</h1></p>
</div>
