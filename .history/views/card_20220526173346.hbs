        <tr>
            <th>картинка</th>
            <th>название</th>
            <th>цена</th>
            <th>количество</th>
            <th>действия</th>

        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td><img class="img_card" src={{img}} alt="ds"/></td>
